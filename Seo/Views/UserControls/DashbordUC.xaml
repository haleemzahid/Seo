<UserControl x:Class="Seo.Views.UserControls.DashbordUC"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:m="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:local="clr-namespace:Seo.Views.UserControls" xmlns:cefSharp="clr-namespace:CefSharp.Wpf;assembly=CefSharp.Wpf" xmlns:hc="https://handyorg.github.io/handycontrol"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="60"/>
            <RowDefinition Height="60"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid Background="{StaticResource MainColor}">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Label Content="Select Project" Foreground="White" VerticalContentAlignment="Center" FontSize="16"/>
            <ComboBox Grid.Column="1"   FontSize="16"/>
        </Grid>
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="3*"/>
                <ColumnDefinition Width="10"/>
                <ColumnDefinition/>
                <ColumnDefinition Width="10"/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <TextBox Text="{Binding LinkssSelectedData.WebsiteLink,UpdateSourceTrigger=PropertyChanged}" VerticalAlignment="Center" TextWrapping="Wrap" Name="txtUrl"></TextBox>
            <Button Command="{Binding command}" CommandParameter="Next" Grid.Column="2">Next</Button>
            <Button Command="{Binding command}" CommandParameter="Bad" Grid.Column="4">Bad</Button>
        </Grid>
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition Width="0.5*"/>
            </Grid.ColumnDefinitions>
            <cefSharp:ChromiumWebBrowser  Grid.Row="1" Grid.ColumnSpan="2" Margin="0 10 0 10" cefSharp:BorderThickness="1" cefSharp:BorderBrush="Blue"
                                      
             Address="{Binding ElementName=txtUrl, Path=Text}" LoadingStateChanged="LoadStateChanged" >


            </cefSharp:ChromiumWebBrowser>


            <hc:CircleProgressBar Grid.ColumnSpan="2"  Visibility="{Binding ControlVisibility,UpdateSourceTrigger=PropertyChanged}" IsIndeterminate="True" Grid.Row="1" Name="progressBar"  Margin="16,0,0,0"  Style="{StaticResource ProgressBarInfoCircle}"/>
            <!--<DataGrid Grid.Column="1">
                <DataGrid.Columns>
                    
                </DataGrid.Columns>
            </DataGrid>-->
        </Grid>

    </Grid>
</UserControl>
