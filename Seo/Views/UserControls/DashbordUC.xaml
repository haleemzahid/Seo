<UserControl x:Class="Seo.Views.UserControls.DashbordUC"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             DataContext="{Binding dashbordViewModel,Source={StaticResource Locator}}"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:m="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:local="clr-namespace:Seo.Views.UserControls" xmlns:cefSharp="clr-namespace:CefSharp.Wpf;assembly=CefSharp.Wpf" xmlns:hc="https://handyorg.github.io/handycontrol" xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="60"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid >
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="10"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="10"/>
                <ColumnDefinition/>
                <ColumnDefinition Width="10"/>
                <ColumnDefinition/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <ComboBox SelectedIndex="0" m:HintAssist.Hint="Project" Grid.Column="0" m:HintAssist.IsFloating="True"  ItemsSource="{Binding ProjectList,UpdateSourceTrigger=PropertyChanged}" DisplayMemberPath="Name" SelectedItem="{Binding ProjectSelectedData,UpdateSourceTrigger=PropertyChanged}" Margin="16 0 0 0"    FontSize="14">
               
            </ComboBox>
            <ComboBox m:HintAssist.Hint="Category" SelectedValuePath="Category" SelectedValue="{Binding FilterData.Category,UpdateSourceTrigger=PropertyChanged}" Grid.Column="2" m:HintAssist.IsFloating="True"  ItemsSource="{Binding FilterList,UpdateSourceTrigger=PropertyChanged}" DisplayMemberPath="Category" SelectedIndex="0"  Margin="16 0 0 0"    FontSize="14"/>
            <ComboBox m:HintAssist.Hint="Anchor Text" SelectedValuePath="AnchorText" DisplayMemberPath="AnchorText" SelectedValue="{Binding FilterData.AnchorText,UpdateSourceTrigger=PropertyChanged}" Grid.Column="4" m:HintAssist.IsFloating="True"  ItemsSource="{Binding FilterList,UpdateSourceTrigger=PropertyChanged}" SelectedIndex="0" Margin="16 0 0 0"    FontSize="14">
               
            </ComboBox>
        </Grid>
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="3*"/>
                <ColumnDefinition Width="0*"/>
                <ColumnDefinition Width="10"/>
                <ColumnDefinition/>
                <ColumnDefinition Width="10"/>
                <ColumnDefinition/>
                <ColumnDefinition Width="3*"/>
            </Grid.ColumnDefinitions>
            <TextBox Grid.Column="0" m:HintAssist.Hint="Current Link" Margin="16 0 0 0" Text="{Binding LinkssSelectedData.SourceURL,UpdateSourceTrigger=PropertyChanged}" VerticalAlignment="Center" TextWrapping="Wrap" Name="txtUrl"></TextBox>
            <Button  x:Name="btn" Command="{Binding command}" CommandParameter="Next" Grid.Column="3">Next</Button>
            <Button Command="{Binding command}" BorderBrush="Red" Background="Red" CommandParameter="Bad" Grid.Column="5">Bad</Button>
        </Grid>
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition Width="0.5*"/>
            </Grid.ColumnDefinitions>
            <cefSharp:ChromiumWebBrowser AddressChanged="Changes" Grid.Row="1" Grid.ColumnSpan="2" Margin="0 10 0 10" cefSharp:BorderThickness="1" cefSharp:BorderBrush="Blue"
                                      
             Address="{Binding ElementName=txtUrl, Path=Text}" LoadingStateChanged="LoadStateChanged" >


            </cefSharp:ChromiumWebBrowser>


            <hc:CircleProgressBar Grid.ColumnSpan="2"  Visibility="{Binding ControlVisibility,UpdateSourceTrigger=PropertyChanged}" IsIndeterminate="True" Grid.Row="1" Name="progressBar"  Margin="16,0,0,0"  Style="{StaticResource ProgressBarInfoCircle}"/>
            <!--<DataGrid Grid.Column="1">
                <DataGrid.Columns>
                    
                </DataGrid.Columns>
            </DataGrid>-->
        </Grid>

    </Grid>
</UserControl>
